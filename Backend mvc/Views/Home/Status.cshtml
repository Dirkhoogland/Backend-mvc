
@{
    ViewData["Title"] = "Status";
}
 <div class = "Dataview">
        <button onclick = "Insertlijst()"   id = "Insertbutton"  >Maak lijst</button>
        <div id = "lijstdiv">

        </div>
    </div>
    <div class = "Inputuserinsert">
        <input id=" Insertbutton" onclick = "taskinput()" value="Maak taak" type = "button">
        <div id = "Inputuserinserttext">

        </div>
    </div>  
 <div id = "itemsdiv">
       
    @{
        foreach (var NaamLijst in ViewBag.items)
        {
            <p>Lijst naam @{@NaamLijst.NaamLijst}</p> <input id = "Update" value="Update list" type = "Button" onclick="updateshow()" > <input id = "Delete" value="delete list" type = "Button" onclick="deletelijst(@NaamLijst.IdLijst)" >
             <input type = "text" id = "updatetlijst"> <input id="updatelijstbutton" value="Update" type = "button" onclick="updatelijst(@NaamLijst.IdLijst)" >
            <p>---------------</p>
            foreach (var lijst in ViewBag.item)
            {
                if (NaamLijst.NaamLijst == lijst.Lijst) {
                    <p id ="p1">Taak @{@lijst.Naam}</p>
                    <input type = "text" id = "Inputupdatetnaam">
                    <p id="p2">Beschrijving@{@lijst.Beschrijving}</p>
                    <input type = "text" id = "Inputupdatetbesch">
                    <p id="p3">Duur = @{@lijst.Duur}</p>
                    <input type = "text" id = "Inputupdatetduur">
                    <p id=p4>Status @{@lijst.Status}</p>
                    <input type = "text" id = "Inputupdatetstatus" >
                    <input id="updatebutton" value="Update" type = "button" onclick="updatestart()" >
                    <input id="confirmbutton" value="confirm" type = "button" onclick="confirmupdate(@lijst.Id,Inputupdatetsnaam,Inputupdatetstatus,Inputupdatetduur,Inputupdatetbesch)" >
                    <input id="Deletebutton" value="Delete" type = "button" onclick="startDelete(@lijst.Id)" >  
                    <p>-----------</p>
                }
            }
        }
    }
    </div>